@model List<CRUDT3.Models.Contactomodel>

<h1>Lista de Contactos</h1>


<div class="alert alert-primary mt-2">
    Total de contactos: @Model.Count
</div>

<a class="btn btn-primary" href="/Contactos/Create">Crear nuevo contacto</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdContacto</td>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Correo</td>
                <td>
                    <a href="/Contactos/Edit/@item.IdContacto" class="btn btn-warning">Editar</a>
                    <a href="/Contactos/Delete/@item.IdContacto" class="btn btn-danger">Eliminar</a>
                    <a href="/Contactos/Details/@item.IdContacto" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
